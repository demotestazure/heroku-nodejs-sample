{
  "name": "node-heroku",
  "version": "0.3.0",
  "description": "A sample Node.js app using Express 4",
  "engines": {
    "node": "12.x"
  },
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/**/*.ejs'",
    "sonar": "gulp sonar",
    "start": "npm run serve",
    "serve": "node src/index.js",
    "test": "jest src",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true,
    "testURL": "http://localhost/"
  },
  
  "dependencies": {
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "@nestjs/common": "7.0.11",
    "@nestjs/core": "7.0.11",
    "@nestjs/platform-express": "7.0.11",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5"
  },
  "devDependencies": {
    "request": "^2.81.0",
    "tape": "^4.7.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "@nestjs/cli": "7.1.5",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.11",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/node": "10.17.3",
    "@types/supertest": "2.0.9",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "ts-node": "8.10.1",
    "gulp": "^3.9.1",
    "tslint-sonarts": "^1.0.0",
    "sonarqube-scanner": "^2.0.1",
    "tsconfig-paths": "3.9.0",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "typescript": "3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
